<% file_system_list = @machineinfo["file_system_list"] %>

<div class="table-responsive">
  <div class="table-responsive">
    <div class="dataTables_wrapper" role="grid">

      <table class="table table-striped table-bordered bootstrap-datatable datatable table-hover" id="listlogs">
        <thead>
            <tr>
              <th>目录</th>
              <th>设备名</th>
              <th>设备类型</th>
              <th>名称</th>
              <th>已使用</th>
              <th>未使用</th>
              <th>文件数</th>
              <th>使用率</th>

            </tr>
        </thead>
        <tbody>
            <% file_system_list.each do |file| %>
                <tr>
                  <td><%= file["dir_name"] %></td>
                  <td><%= file["dev_name"] %></td>
                  <td><%= file["type_name"] %></td>
                  <td><%= file["sys_type_name"] %></td>
                  <td><%= file["usage"]["used"] %></td>
                  <td><%= file["usage"]["avail"] %></td>
                  <td><%= file["usage"]["files"] %></td>
                  <td><%= file["usage"]["use_percent"] %></td>

                </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <!--/span-->

</div>
