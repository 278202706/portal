<script>
  $('#nav_menu_user_service').addClass('active')
</script>
<div class="container-fluid main-container" xmlns="http://www.w3.org/1999/html">

  <%= render(:partial => "/sidebar/service") %>
  <div class="main-content clearfix">
    <div class="breadcrumbs" id="breadcrumbs">
      <ul class="breadcrumb">
        <li>
          <i class="icon-home"></i>
          能力开发

			<span class="divider">
				<i class="icon-angle-right"></i>
			</span>
        </li>
        <li class="active">软件超市</li>
      </ul>
      <!--.breadcrumb-->
    </div>
    <div id="content" class="page-content">

    <div class="page-header position-relative">
      <h1>
        能力超市
        <small>
          <i class="icon-double-angle-right"></i>
          <span>基础服务&文件存储服务——申请</span>
        </small>
      </h1>
    </div>

    <div class="row-fluid">
      <div class="span3 center">
        <div class="profile-picture">
          <img alt="Pic mysql" src="/assets/pic_filestorage.png" />
        </div>
      </div>
      <div class="span9">

        <div class="text profile-user-info">
          <div class="profile-info-row">
            <div class="profile-info-name">服务类型</div>
            <div class="profile-info-value">文件存储</div>
          </div>
          <div class="profile-info-row">
            <div class="profile-info-name">服务版本</div>
            <div class="profile-info-value">1.0</div>
          </div>
          <div class="profile-info-row">
            <div class="profile-info-name">服务简介</div>
            <div class="profile-info-value">MySQL是一个关系型数据库管理系统,MySQL被广泛地应用在Internet上的中小型网站中。特点是体积小、速度快、总体拥有成本低。</div>
          </div>
        </div>


        <h4 class="header blue lighter smaller">请填写下列信息</h4>
        <%= form_tag url_for(:controller=>"service",:action=>"applyfile"), :class => "form-horizontal", :method => :post do %>
          <div class="control-group">
            <label class="control-label" for="form-field-sername">服务名称</label>

            <div class="controls">
              <input type="text" id="form-field-sername" placeholder="1-32个字符，不可以数字开头，不可包含中文"/>
            </div>
          </div>



          <div class="control-group">
            <label class="control-label">选择方案</label>

            <div class="controls">
              <div class="row-fluid">


                <div class="span4 pricing-span">
                  <div class="widget-box pricing-box-small">
                    <div class="widget-header header-color-blue2">
                      <h5 class="lighter">方案1(基本）</h5>
                    </div>
                    <div class="widget-body">
                      <div class="widget-main no-padding">
                        <ul class="unstyled list-striped pricing-table">
                          <li>类型：文件存储</li>
                          <li>版本：1.0</li>
                          <li>存储空间：2GB</li>
                          <li>内存：64MB</li>
                        </ul>
                      </div>
                      <div>
                        <a class="btn btn-block btn-small" href="#">
                          <input type="radio" name="filetype" value="1" style="position:static;opacity: 1;">
                        </a>
                      </div>
                    </div>
                  </div>
                </div>


                <div class="span4 pricing-span">
                  <div class="widget-box pricing-box-small">
                    <div class="widget-header header-color-blue2">
                      <h5 class="lighter">方案2(中等）</h5>
                    </div>
                    <div class="widget-body">
                      <div class="widget-main no-padding">
                        <ul class="unstyled list-striped pricing-table">
                          <li>类型：文件存储</li>
                          <li>版本：1.0</li>
                          <li>存储空间：5GB</li>
                          <li>内存：128MB</li>
                        </ul>
                      </div>
                      <div>
                        <a class="btn btn-block btn-small" href="#">
                          <input type="radio" name="filetype" value="2" style="position:static;opacity: 1;">
                        </a>
                      </div>
                    </div>
                  </div>
                </div>



                <div class="span4 pricing-span">
                  <div class="widget-box pricing-box-small">
                    <div class="widget-header header-color-blue2">
                      <h5 class="lighter">方案3(高级）</h5>
                    </div>
                    <div class="widget-body">
                      <div class="widget-main no-padding">
                        <ul class="unstyled list-striped pricing-table">
                          <li>类型：文件存储</li>
                          <li>版本：1.0</li>
                          <li>存储空间：10GB</li>
                          <li>内存：256MB</li>
                        </ul>
                      </div>
                      <div>
                        <a class="btn btn-block btn-small" href="#">
                          <input type="radio" name="filetype" value="3" style="position:static;opacity: 1;">
                        </a>
                      </div>
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </div>


          <div class="form-actions">
            <%= submit_tag '确认创建', :class => 'btn btn-primary' %>
            <input class="btn" type="reset" value="取消">
          </div>

        </form>


      </div>
    </div>



    <% end %>
    </div>
  </div>
</div>
