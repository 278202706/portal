<%= form_tag url_for(:controller=>'adservice',:action=>'msgform',:msgtype=>"month"),:method=>:post do %>

  <%=select_tag "yearselm",options_for_select({ "2013"=>"2013","2012"=>"2012"},Time.now.strftime("%Y"))%>
    <%=select_tag "monthselm",options_for_select({ "01"=>"01","02"=>"02","03"=>"03","04"=>"04","05"=>"05","06"=>"06","07"=>"07","08"=>"08","09"=>"09","10"=>"10","11"=>"11","12"=>"12"},Time.now.strftime("%m"))%>
    <%= submit_tag '提交选择',:class=>'btn btn-primary',:style=>'margin-top:-10px'%>


<% end %>

<div class="box" >
  <div class='messagetotal'>
    <div class="box-content">
      <div class="total_inf" id="mtinf">
        <div class="baobiaopic  widget-box transparent">
          <%=render :partial =>'adservice/zhexianpic',:locals=>{:year=>year,:type=>type,:idname=>"monthpic"}%>
        </div>
      </div>

    </div>
  </div>
</div>

