<script>
  $('#nav_menu_admin_applications').addClass('active')
</script>
<div class="container-fluid main-container">

  <%= render(:partial => "/sidebar/adapplications") %>
  <div class="main-content clearfix">
    <div class="breadcrumbs" id="breadcrumbs">
      <ul class="breadcrumb">
        <li>
          <i class="icon-home"></i>
          应用托管

			<span class="divider">
				<i class="icon-angle-right"></i>
			</span>
        </li>
        <li class="active">汇总信息</li>
      </ul>
      <!--.breadcrumb-->
    </div>
    <div id="content" class="page-content">

    <div class="page-header position-relative">
      <h1>
        汇总信息
        <small>
          <i class="icon-double-angle-right"></i>
          <span>概览</span>
        </small>
      </h1>
    </div>

    <div class="row-fluid">
      <div class="grid3 center">
        <div class="infobox infobox-dark infobox-blue">
          <div class="infobox-icon">
            <i class="icon-briefcase"></i>
          </div>
          <div class="infobox-data" style="margin-top:5px">
    			<span class="infobox-content">
    				<b style="font-size:18px;">应用</b>
            </br>
            <span class="infobox-content pull-right">已建<%= @allapps.length %>个</span>

    			</span>
          </div>
        </div>
      </div>
      <div class="grid3 center">
        <div class="infobox infobox-dark infobox-blue">
          <div class="infobox-icon">
            <i class="icon-tag"></i>
          </div>
          <div class="infobox-data" style="margin-top:5px">
    			<span class="infobox-content">
    				<b style="font-size:18px;">服务</b>
            </br>
            <span class="infobox-content pull-right">总共<%= @allsers.length %>个</span>

    			</span>
          </div>
        </div>
      </div>
      <div class="grid3 center">
        <div class="infobox infobox-dark infobox-blue">
          <div class="infobox-icon">
            <i class="icon-align-right"></i>
          </div>
          <div class="infobox-data" style="margin-top:5px">
    			<span class="infobox-content">
    				<b style="font-size:18px;">空间</b>
            </br>
            <span class="infobox-content pull-right">总共200G&nbsp;&nbsp;已用10G</span>

    			</span>
          </div>
        </div>
      </div>
    </div>
    <div class="space-20"></div>
    <div class="row-fluid">


    <div class="span6">
      <div id="applist-box" class="widget-box transparent">
        <div class="widget-header">
          <h4 class="lighter smaller">应用信息</h4>
        </div>
        <div class="widget-body">
          <div class="widget-main padding-4">
            <div class="slimScrollDiv" style="position: relative;width: auto;">
              <div class="comments" style="width: auto">
                <% @preapps.each do |preapp| %>
                <div class="itemdiv commentdiv">
                  <div class="user">
                    <i class="icon-briefcase bigger-230 blue"></i>
                  </div>

                  <div class="body">
                    <div class="name">
                      <a href="#"><%= preapp.appname%></a>
                    </div>

                    <div class="time">
                      <i class="icon-time"></i>更新时间
                      <span class="blue"><%= preapp.updated_at%></span>
                    </div>

                    <div class="text profile-user-info">
                      <div class="profile-info-row">
                        <div class="profile-info-name">所属厂商</div>
                        <div class="profile-info-value"><%= preapp.org%></div>
                      </div>
                      <div class="profile-info-row">
                        <div class="profile-info-name">所属项目</div>
                        <div class="profile-info-value"><%= preapp.space%></div>
                      </div>
                      <div class="profile-info-row">
                        <div class="profile-info-name">运行状态</div>
                        <div class="profile-info-value">
                          <% if preapp.active==false %>
                          未启动
                          <% else %>
                          已启动
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <% end %>



              </div>
              <div class="center">
                <i class="icon-folder-open icon-2x green"></i>
                <a href="/adapplications/manage">
                  查看所有应用
                  <i class="icon-arrow-right"></i>
                </a>
              </div>
              <div class="hr hr-double hr8"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="span6">
      <div id="serlist-box" class="widget-box transparent">
        <div class="widget-header">
          <h4 class="lighter smaller">服务信息</h4>
        </div>
        <div class="widget-body">
          <div class="widget-main padding-4">
            <div class="slimScrollDiv" style="position: relative;width: auto;">
              <div class="comments" style="width: auto">
                <% @presers.each do |preser| %>
                <div class="itemdiv commentdiv">
                  <div class="user">
                    <i class="icon-tag bigger-230 blue"></i>
                  </div>

                  <div class="body">
                    <div class="name">
                      <a href="#"><%= preser.name%></a>
                    </div>

                    <div class="time">
                      <i class="icon-time"></i>批准时间
                      <span class="blue"><%= preser.approvetime%></span>
                    </div>

                    <div class="text profile-user-info">
                      <div class="profile-info-row">
                        <div class="profile-info-name">服务类型</div>
                        <div class="profile-info-value"><%= preser.sertype%></div>
                      </div>
                      <div class="profile-info-row">
                        <div class="profile-info-name">所属厂商</div>
                        <div class="profile-info-value"><%= preser.org%></div>
                      </div>
                      <div class="profile-info-row">
                        <div class="profile-info-name">所属项目</div>
                        <div class="profile-info-value"><%= preser.space%></div>
                      </div>

                    </div>
                  </div>


                </div>
                <% end %>
              </div>
              <div class="center">
                <i class="icon-folder-open icon-2x green"></i>
                <a href="/adapplications/service">
                  查看所有能力绑定情况
                  <i class="icon-arrow-right"></i>
                </a>
              </div>
              <div class="hr hr-double hr8"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>

    </div>
  </div>
</div>
